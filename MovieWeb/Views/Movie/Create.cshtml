@model MovieWeb.Models.MovieCreateViewModel

    <form asp-controller="Movie" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input class="form-control" asp-for="ReleaseDate" />
            <span class="text-danger" asp-validation-for="ReleaseDate"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <input class="form-control" asp-for="Genre" />
            <span class="text-danger" asp-validation-for="Genre"></span>
        </div>


        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <label asp-for="SelectedWatchStatus"></label>
            <select class="form-control" asp-for="SelectedWatchStatus" asp-items="@Model.WatchStatuses"></select>
            <span class="text-danger" asp-validation-for="SelectedWatchStatus"></span>
        </div>

        <button class="btn btn-primary" type="submit">Create Movie</button>
    </form>