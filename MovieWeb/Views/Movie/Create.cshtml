@model MovieWeb.Models.MovieCreateViewModel

<form asp-controller="Movie" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input class="form-control" asp-for="ReleaseDate" />
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input class="form-control" asp-for="Genre" />
    </div>

    <button class="btn btn-primary" type="submit">Create Movie</button>
</form>